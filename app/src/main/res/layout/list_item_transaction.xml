<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_divider_bottom"
    android:foreground="?selectableItemBackground"
    android:paddingHorizontal="@dimen/app_margin_3x"
    android:paddingVertical="@dimen/app_margin_2x">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemTransactionSummary"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/app_margin_2x"
        app:layout_constraintBottom_toTopOf="@id/itemTransactionDate"
        app:layout_constraintEnd_toStartOf="@id/itemTransactionAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="KFC dinner" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemTransactionDate"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_half"
        android:layout_marginEnd="@dimen/app_margin_2x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemTransactionAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemTransactionSummary"
        tools:text="2021/5/4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemTransactionAmount"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$28.5" />

</androidx.constraintlayout.widget.ConstraintLayout>